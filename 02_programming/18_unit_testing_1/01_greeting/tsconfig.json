{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "ESNext",
      "DOM"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "./build",
    "node_modules",
    "./guidelines"
  ]
}